package question2;

public class Car {
	private int yearModel;
	private String make;
	private int speed;
	
	public Car(int year, String manufacturer){
		yearModel = year;
		make = manufacturer;
		speed = 0;
	}
	
	public int getSpeed(){
		return speed;
	}
	
	public int getYear(){
		return yearModel;
	}
	
	public String getMake(){
		return make;
	}
	
	public void accelerate(){
		if (speed < 210)
			speed += 5;
	}
	
	public void brake(){
		if (speed > 0)
			speed -= 5;
	}
}
